<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image_place"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pthall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/text_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So the place we gonna talked about it's a wonderful and international inhernitence, knon all over the world"
        android:layout_toRightOf="@+id/image_place"/>

    <TextView
        android:id="@+id/did_you_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Did you know?"
        android:layout_below="@id/text_information"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/image_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/did_you_know"
        android:src="@drawable/ptmap"
        android:onClick="ImageMap"/>
</RelativeLayout>